# ============================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# ============================================
# WARNING: This is a template. Replace all values before deployment!
# Never commit actual production credentials to version control.

# ============================================
# SERVER CONFIGURATION
# ============================================
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# ============================================
# API CONFIGURATION
# ============================================
API_PREFIX=/api/v1

# ============================================
# CORS CONFIGURATION
# ============================================
# Replace with your actual production domain(s)
# Use comma-separated values for multiple origins
CORS_ORIGIN=https://your-production-domain.com,https://www.your-production-domain.com

# ============================================
# RATE LIMITING
# ============================================
# 15 minutes window
RATE_LIMIT_WINDOW_MS=900000
# 100 requests per window per IP
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# DATABASE CONFIGURATION (MySQL)
# ============================================
# Replace with your production database credentials
DB_HOST=your-production-db-host.com
DB_PORT=3306
DB_NAME=green_permit_db
DB_USER=green_permit_user
DB_PASSWORD=REPLACE_WITH_STRONG_PASSWORD_FROM_SECRETS_MANAGER
DB_CONNECTION_LIMIT=20
DB_CONNECT_TIMEOUT=10000
DB_ACQUIRE_TIMEOUT=10000
DB_TIMEOUT=60000

# ============================================
# JWT CONFIGURATION
# ============================================
# Generate a strong secret: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=REPLACE_WITH_STRONG_JWT_SECRET_FROM_SECRETS_MANAGER
JWT_EXPIRE=24h
JWT_REFRESH_SECRET=REPLACE_WITH_STRONG_REFRESH_SECRET_FROM_SECRETS_MANAGER
JWT_REFRESH_EXPIRE=7d

# ============================================
# LOGGING CONFIGURATION
# ============================================
LOG_LEVEL=info
LOG_FILE_PATH=/var/log/green-permit-api
LOG_MAX_SIZE=10m
LOG_MAX_FILES=14
LOG_DATE_PATTERN=YYYY-MM-DD

# ============================================
# SECURITY CONFIGURATION
# ============================================
# Enable HTTPS in production
FORCE_HTTPS=true
# Trusted proxy IPs (for X-Forwarded-* headers)
TRUST_PROXY=true
# Session security
SESSION_SECRET=REPLACE_WITH_STRONG_SESSION_SECRET_FROM_SECRETS_MANAGER
COOKIE_SECURE=true
COOKIE_HTTP_ONLY=true
COOKIE_SAME_SITE=strict

# ============================================
# MONITORING & HEALTH CHECK
# ============================================
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true

# ============================================
# EXTERNAL SERVICES (if applicable)
# ============================================
# Email service
SMTP_HOST=smtp.your-email-provider.com
SMTP_PORT=587
SMTP_SECURE=true
SMTP_USER=your-smtp-user
SMTP_PASSWORD=REPLACE_WITH_SMTP_PASSWORD_FROM_SECRETS_MANAGER
EMAIL_FROM=noreply@your-production-domain.com

# SMS service (if using Twilio, Nexmo, etc.)
SMS_PROVIDER=twilio
SMS_API_KEY=REPLACE_WITH_SMS_API_KEY
SMS_API_SECRET=REPLACE_WITH_SMS_API_SECRET
SMS_FROM_NUMBER=+1234567890

# Cloud storage (if using AWS S3, Google Cloud Storage, etc.)
STORAGE_PROVIDER=s3
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=REPLACE_WITH_AWS_ACCESS_KEY
AWS_SECRET_ACCESS_KEY=REPLACE_WITH_AWS_SECRET_KEY
S3_BUCKET_NAME=green-permit-uploads

# ============================================
# REDIS CONFIGURATION (Optional - for caching/sessions)
# ============================================
REDIS_ENABLED=false
REDIS_HOST=your-redis-host.com
REDIS_PORT=6379
REDIS_PASSWORD=REPLACE_WITH_REDIS_PASSWORD_FROM_SECRETS_MANAGER
REDIS_DB=0
REDIS_TTL=3600

# ============================================
# APPLICATION SPECIFIC
# ============================================
# Base URL for the application
APP_URL=https://your-production-domain.com
API_URL=https://api.your-production-domain.com

# Timezone
TZ=Africa/Lagos

# Maximum request body size
MAX_REQUEST_SIZE=10mb

# File upload limits
MAX_FILE_SIZE=5mb
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/jpg,application/pdf
