{
  "name": "green-permit-api",
  "version": "1.0.0",
  "description": "Green Permit API - Node.js Express REST API",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "start:prod": "NODE_ENV=production node src/server.js",
    "start:pm2": "pm2 start ecosystem.config.js",
    "stop:pm2": "pm2 stop ecosystem.config.js",
    "restart:pm2": "pm2 restart ecosystem.config.js",
    "reload:pm2": "pm2 reload ecosystem.config.js",
    "delete:pm2": "pm2 delete ecosystem.config.js",
    "logs:pm2": "pm2 logs green-permit-api",
    "monit:pm2": "pm2 monit",
    "dev": "nodemon src/server.js",
    "db:init": "node database/init.js",
    "db:schema": "mysql -u root -p green_permit_db < database/schema.sql",
    "db:seed": "mysql -u root -p green_permit_db < database/seed.sql",
    "db:migrate": "node scripts/migrate.js",
    "db:backup": "node scripts/backup-database.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "health": "curl -s http://localhost:3000/health | jq .",
    "build": "npm ci --only=production",
    "validate": "npm run lint && npm run test:ci",
    "docker:build": "docker build -t green-permit-api:latest .",
    "docker:run": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "docker:logs": "docker-compose logs -f api"
  },
  "keywords": [
    "express",
    "api",
    "rest",
    "nodejs"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "mysql2": "^3.6.5",
    "pm2": "^5.4.3",
    "winston": "^3.19.0",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  }
}
